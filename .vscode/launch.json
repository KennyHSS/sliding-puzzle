{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch Chrome",
            "request": "launch",
            "type": "chrome",
            "url": "http://localhost:8080",
            "webRoot": "${workspaceFolder}"
        },
        {
            "name": "Débogueur Python : Fichier actuel",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal"
        },
        {
            "name": "Python: Puzzle",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/src/puzzle.py",
            "args": [
                "${workspaceFolder}/data/init/init1.txt",
                "${workspaceFolder}/data/goal/goal1.txt"
            ],
            "console": "integratedTerminal"
        }
    ]
}